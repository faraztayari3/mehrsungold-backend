
# IMPORTANT: This is an example file. Do NOT put real secrets here.

MONGODB_URI=mongodb://USER:PASSWORD@HOST:PORT/?authSource=admin
MONGODB_DB=gold
MONGODB_COLLECTION=balancetransactions
# در صورت نیاز: &replicaSet=<RS_NAME> و/یا &tls=true را به انتهای MONGODB_URI اضافه کن

# --- SMTP (optional) ---
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notify@example.com
SMTP_PASS=CHANGE_ME
SMTP_FROM="Mehrsun Notifier <notify@example.com>"
ALERT_TO=alerts@example.com

# --- Kavenegar (optional) ---
KAVENEGAR_API_KEY=CHANGE_ME
KAVENEGAR_SENDER=20006000646
# Admin receptors (comma-separated)
KAVENEGAR_RECEPTOR=0912xxxxxxx

# --- SMS safety ---
# off | dry-run | live
SMS_MODE=off
SMS_ALLOW_LIVE=false
NODE_ENV=production
SMS_ALLOW_NON_PROD=false

# If true, bt-mailer will ignore/wipe change-stream resume tokens on startup.
# This prevents processing/sending notifications for older events after downtime.
WATCH_START_FRESH=false

# If set, only these numbers can receive *user* SMS (comma-separated)
SMS_ALLOWLIST=

# Optional: CC a copy of user SMS to this number
SMS_CC_TEST_NUMBER=

# Rate limit (0 = unlimited)
SMS_MAX_PER_MINUTE=0

# In --test mode, never send real SMS unless true
SMS_TEST_CAN_SEND=false